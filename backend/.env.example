# Copy this file to `.env` and fill in your real values. Do NOT commit `.env` to source control.
GOOGLE_OAUTH_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_OAUTH_CLIENT_SECRET=your-google-client-secret
# MongoDB connection string (use your Atlas URI). Set this in your local `.env` (do NOT commit credentials).
MONGO_URI=mongodb+srv://<username>:<password>@cluster0.xxxxx.mongodb.net/?retryWrites=true&w=majority
# Database name to connect to (the code will connect to this DB explicitly)
MONGO_DB_NAME=CoCreateZ
PORT=4000
FRONTEND_URL=http://localhost:3000# Real-time Collaboration Backend Environment Configuration

# Server Configuration
PORT=4000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/cocreatex

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# Frontend Configuration
FRONTEND_URL=http://localhost:3000

# Real-time Features
SOCKET_IO_ORIGINS=http://localhost:3000
MAX_CONNECTIONS_PER_USER=5
MESSAGE_HISTORY_LIMIT=1000
PRESENCE_TIMEOUT=300000

# WebRTC Configuration
ICE_SERVERS=stun:stun.l.google.com:19302,stun:stun1.l.google.com:19302
TURN_SERVER_URL=
TURN_SERVER_USERNAME=
TURN_SERVER_CREDENTIAL=

# Redis Configuration (Optional - for session management)
REDIS_URL=redis://localhost:6379
REDIS_PREFIX=cocreatex:

# File Upload Configuration
MAX_FILE_SIZE=50mb
UPLOAD_DIR=./uploads
ALLOWED_FILE_TYPES=.jpg,.jpeg,.png,.gif,.pdf,.doc,.docx,.txt,.zip

# Performance Monitoring
ENABLE_PERFORMANCE_LOGGING=true
LOG_LEVEL=info
MAX_LOG_FILES=5
LOG_MAX_SIZE=10mb

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Security
ENABLE_HELMET=true
ENABLE_CORS=true
CORS_CREDENTIALS=true

# Collaboration Features
MAX_COLLABORATION_SESSIONS=100
SESSION_CLEANUP_INTERVAL=3600000
AUTO_SAVE_INTERVAL=30000

# Analytics
ENABLE_ANALYTICS=true
ANALYTICS_RETENTION_DAYS=30

# Notification System
ENABLE_PUSH_NOTIFICATIONS=false
PUSH_NOTIFICATION_KEY=
NOTIFICATION_ICON=/assets/notification-icon.png
